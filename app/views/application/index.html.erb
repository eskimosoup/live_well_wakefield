<%= content_for :head do %>
  <script>
    $(function() {
      $('.service').matchHeight();

      $('.home-client-stories, .home-client-stories-static').slick({
        infinite: true,
        dots: false,
        arrows: false,
        autoplay: false,
        fade: true,
        speed: 500
      });
    });
  </script>

  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.4";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
<% end %>
<div id="fb-root"></div>

<div class="row show-for-small">
  <div class="small-12 columns">
    <div class="home-banner">
      <div class="home-banner-title">Supporting <em>healthy living</em> for the people of Wakefield</div>

      <div class="home-client-stories-static">
        <%= render partial: 'client_stories/home_page', collection: @presented_home_client_stories, as: :client_story_presenter %>
      </div>
    </div>
  </div>
</div>

<div class="row  hide-for-small collapse">
  <div class="small-12 columns">
    <div class="home-animated-banner">
      <h1 class="home-banner-title">Supporting <em>healthy living</em> for the people of Wakefield</h1>

      <div class="home-client-stories-wrap">
        <div class="home-client-stories">
          <%= render partial: 'client_stories/home_page', collection: @presented_home_client_stories, as: :client_story_presenter %>
        </div>
      </div>

      <div class="home-sprites" max-position="-627">
        <%= image_tag 'layout/home/sprites.png', alt: '' %>
      </div>

      <div class="home-background">
        <%= image_tag 'layout/home/bg.png', alt: '' %>
      </div>
    </div>
  </div>
</div>

<div class="row collapse small-uncollapse medium-collapse">
  <%= render partial: 'services/service', collection: @presented_services, as: :service_presenter %>

  <div class="large-2 medium-4 small-12 columns">
    <div class="service service-blue">
      <%= link_to 'I want to become a volunteer', '/pages/i-want-to-become-a-volunteer' %>
    </div>
  </div>
  <div class="large-2 medium-4 small-12 columns">
    <div class="service service-yellow">
      <%= link_to 'Meet the team', '/pages/team-members' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <div class="facebook">
      <div class="fb-page" data-href="https://www.facebook.com/<%= global_site_settings['Facebook'] %>" data-width="532" data-height="531" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="true">
        <div class="fb-xfbml-parse-ignore">
          <blockquote cite="https://www.facebook.com/facebook">
            <a href="https://www.facebook.com/facebook">Facebook</a>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>

<div class="tabs prevent-flash">
  <ul class="tab-list">
    <li><a href="#tabs-1">Content</a></li>
    <li><a href="#tabs-3">Settings</a></li>
    <li>
      <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
        <%= octicon('chevron-down') %>
      <% end %>
    </li>
  </ul>

  <%= field_set_tag nil, id: 'tabs-1' do %>
    <div class="field">
      <%= f.label :area %><br>
        <% if f.object.new_record? %>
        <%= f.select :area, AdditionalContent::AREAS.reject { |x| AdditionalContent.pluck(:area).include? x }, prompt: t('helpers.select.prompt')  %>
      <% else %>
        <%= f.select :area, AdditionalContent::AREAS, prompt: t('helpers.select.prompt')  %>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content , class: 'tinymce' %>
    </div>
  <% end %>

  <%= field_set_tag nil, id: 'tabs-3' do %>
    <div class="field">
      <%= f.label :display %><br>
      <%= f.check_box :display %>
    </div>
  <% end %>
</div>
